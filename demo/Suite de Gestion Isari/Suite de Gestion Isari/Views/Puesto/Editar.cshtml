@{
    ViewData["Title"] = "Editar Puesto de Trabajo";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Editar Puesto de Trabajo</h1>

    <form>
        
        <div class="mb-3">
            <label for="nombrePuesto" class="form-label">Nombre del Puesto</label>
            <input type="text" class="form-control" id="nombrePuesto" value="Cajero" required>
        </div>

       
        <div class="mb-3">
            <label for="descripcion" class="form-label">Descripción</label>
            <textarea class="form-control" id="descripcion" rows="4" required>Cajero responsable de la atención en el punto de venta y manejo de efectivo.</textarea>
        </div>

        
        <div class="mb-3">
            <label for="salario" class="form-label">Salario</label>
            <input type="number" class="form-control" id="salario" value="1500" required>
        </div>

        
        <div class="d-flex justify-content-between">
            <a class="btn btn-secondary" role="button" asp-controller="Puesto" asp-action="Index">Volver</a>
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        </div>
    </form>
</div>
